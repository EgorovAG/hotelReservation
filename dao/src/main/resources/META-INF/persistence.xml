<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="com.github.egorovag.hotelreserv" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.github.egorovag.hotelreserv.model.AuthUser</class>
        <class>com.github.egorovag.hotelreserv.model.Client</class>
        <class>com.github.egorovag.hotelreserv.model.OrderClient</class>
        <class>com.github.egorovag.hotelreserv.model.BlackList</class>
        <class>com.github.egorovag.hotelreserv.model.Room</class>


        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/hotelreserv?serverTimezone=UTC&amp;
                      useSSL=false&amp;createDatabaseIfNotExist=true&amp;logger=com.mysql.cj.log.Slf4JLogger&amp;profileSQL=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="10"/>
        </properties>
    </persistence-unit>
